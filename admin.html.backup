                    </div>
                    
                    <!-- Notes Section -->
                    <div class="order-detail-section">
                        <h4>üìù Notes</h4>
                        <div class="form-group">
                            <label>Client Notes <span style="color: #60a5fa; font-size: 0.75rem;">(visible to client)</span></label>
                            <textarea id="quoteClientNotes" rows="2" placeholder="Thank you for your interest!"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Internal Notes <span style="color: #fbbf24; font-size: 0.75rem;">(only you)</span></label>
                            <textarea id="quoteInternalNotes" rows="2" placeholder="Discussed scope on call..."></textarea>
                        </div>
                    </div>
                    
                    <!-- Options Section -->
                    <div class="order-detail-section">
                        <h4>‚öôÔ∏è Options</h4>
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                            <div class="form-group">
                                <label>Contract URL</label>
                                <input type="url" id="quoteContractUrl" placeholder="https://...">
                            </div>
                            <div class="form-group">
                                <label>Valid Until</label>
                                <input type="date" id="quoteValidUntil">
                            </div>
                        </div>
                        <div class="form-group" style="margin-top: 0.5rem;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer; margin: 0;">
                                <input type="checkbox" id="quoteRequiresContract" checked style="width: 16px; height: 16px;">
                                Requires signed contract
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="action-btn secondary" onclick="adminPanel.closeQuoteModal()">Cancel</button>
                <button class="action-btn" onclick="adminPanel.saveQuote()">üíæ Save Quote</button>
            </div>
        </div>
    </div>

    <!-- Quote View Modal -->
    <div class="modal-overlay" id="quoteViewModal" style="display: none;">
        <div class="modal" style="max-width: 600px;">
            <div class="modal-header">
                <h3>üé´ Quote Details</h3>
                <button class="modal-close" onclick="adminPanel.closeQuoteViewModal()">&times;</button>
            </div>
            <div class="modal-body" id="quoteViewContent">
                <div class="loading">Loading quote details...</div>
            </div>
            <div class="modal-footer">
                <button class="action-btn secondary" onclick="adminPanel.closeQuoteViewModal()">Close</button>
            </div>
        </div>
    </div>

    <!-- Supabase -->
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script src="js/admin.js"></script>
    <script src="js/thanksgiving.js"></script>
</body>
</html>
